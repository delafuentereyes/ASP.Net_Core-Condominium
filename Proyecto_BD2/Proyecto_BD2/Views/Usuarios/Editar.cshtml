@{
    ViewData["Title"] = "Editar usuarios";
}

@await Html.PartialAsync("userAccess")

<div class="container">
    <form class="form" asp-controller="Usuarios" asp-action="UpdateUsuario" enctype="multipart/form-data">
        <div style="border: 1px solid #d5d7dd; padding: 30px; border-radius: 15px;">
            <div class="row">
                <div class="col-lg-3 col-md-4 col-sm-12">
                    <div cla0ss="container-profile">
                        <div class="avatar-upload">
                            <div class="avatar-edit">
                                <input type='file' id="inputPhoto" name="inputPhoto" accept=".png, .jpg, .jpeg" />
                                <label for="inputPhoto"></label>
                            </div>
                            <div class="avatar-preview">
                                <div id="imagePreview" style="background-image: url(@ViewBag.usuarioEdit.foto);">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9 col-md-8 col-sm-12">
                    <div class="text-center">
                        <h4>Editar usuarios</h4>
                        <hr>
                    </div>
                    <div class="row">
                     
                        <input hidden="hidden" name="idUsuario" value="@ViewBag.usuarioEdit.ID_Usuario">
                        <div class="col-lg-4 col-md-12 col-sm-12">
                            <label for="txtNombre" class="form-label">Nombre</label>
                            <input type="text" value="@ViewBag.usuarioEdit.nombre"
                                   class="form-control form-control-sm mb-2" name="txtNombre" required />
                        </div>
                        
                       
                    </div>
                    <div class="row">
                        <div class="col-lg-5 col-md-4 col-sm-12">
                            <label for="txtCedula" class="form-label">Cédula</label>
                            <input type="text" value="@ViewBag.usuarioEdit.cedula"
                                   class="form-control form-control-sm mb-2" name="txtCedula" required />
                        </div>
                        <div class="col-lg-7 col-md-8 col-sm-12">
                            <label for="txtEmail" class="form-label">Correo Electrónico</label>
                            <input type="email" value="@ViewBag.usuarioEdit.email"
                                   class="form-control form-control-sm mb-2" name="txtEmail" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 col-md-6 col-sm-12">
                            <label for="txtPassword" class="form-label">Contraseña</label>
                            <input type="password" value="@ViewBag.usuarioEdit.password"
                                   class="form-control form-control-sm mb-2" name="txtPassword" required />
                        </div>
                        <div class="col-lg-4 col-md-6 col-sm-12">
                            @{
                                <label for="selectRol" class="form-label">Rol del usuario</label>
                                if (ViewBag.usuarioEdit.nombreRol == "Administrador")
                                {
                                    <p style="text-decoration: underline;"><b>@ViewBag.usuarioEdit.Tipo_Rol</b></p>
                                }
                                else
                                {
                                    <select class="form-select form-select-sm mb-2" name="selectRol" required>
                                        <option disabled value="">Seleccione un rol</option>
                                        @foreach (var roles in ViewBag.rolesUsuarios)
                                        {
                                            bool isSelected = false;
                                            if (@ViewBag.usuarioEdit.Tipo_Rol == roles.Tipo_Rol)
                                            {
                                                isSelected = true;
                                            }
                                            <option value="@roles.ID_Rol" selected="@isSelected">@roles.Tipo_Rol</option>
                                        }
                                    </select>
                                }
                            }
                        </div>
                    </div>
                    <br>
                    <div class="form-group float-end">
                        <div class="col-12">
                            <button class="btn btn-secondary"
                                    type="button"
                                    onclick="window.location='@Url.Action("Index", "Usuarios")'">
                                Cancelar
                            </button>
                            <button class="btn btn-success" type="submit">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>