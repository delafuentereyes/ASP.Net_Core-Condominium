@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="container-sm" style="width:50%;margin-top:20%">
        <div class="card">
            <div class="card-header">
                Login
            </div>
            <form asp-controller="Login" asp-action="ValidateLogin">
                <div class="card-body">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="txtUsuario" placeholder="name@example.com" value="Bychuzz" required>
                        <label for="floatingInput"> Nombre de usuario </label>
                    </div>
                    <div class="form-floating">
                        <input type="password" class="form-control" name="txtPass" placeholder="Password" value="jesus123" required>
                        <label for="floatingPassword"> Contraseña </label>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary" style="float:right">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>
